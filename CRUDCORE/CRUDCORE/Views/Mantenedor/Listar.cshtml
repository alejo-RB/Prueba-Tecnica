@model List<VehiculoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Vehiculo
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i></a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Chasis</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Año de Modelo</th>
                    <th>Color</th>
                    <th>Estado</th>
                    <th>Fecha de Registrp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.codigo</td>
                        <td>@item.chasis</td>
                        <td>@item.marca</td>
                        <td>@item.modelo</td>
                        <td>@item.anio_modelo</td>
                        <td>@item.color</td>
                        <td>@item.estado</td>
                        <td>@item.fecha_registro</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-id="@item.id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

